# ============================================
# TRM REFERRAL PLATFORM - PRODUCTION CONFIG
# ============================================

# Database (Use MongoDB Atlas or production MongoDB)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/trm_referral?retryWrites=true&w=majority

# Security (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_32_CHAR_STRING
JWT_ACCESS_SECRET=CHANGE_THIS_TO_A_DIFFERENT_RANDOM_32_CHAR_STRING
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_32_CHAR_STRING
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_EMAIL_SECRET=CHANGE_THIS_EMAIL_SECRET
JWT_RESET_SECRET=CHANGE_THIS_RESET_SECRET

# Server
PORT=5000
HOST=0.0.0.0
NODE_ENV=production

# Frontend (Update with your production domain)
FRONTEND_URL=https://your-domain.com
CORS_ORIGIN=https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=warn

# ============================================
# EMAIL (SMTP Configuration)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@your-domain.com

# ============================================
# AWS S3 (File Storage)
# ============================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=trm-production-uploads

# ============================================
# REDIS (Optional - for distributed caching)
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# SECURITY
# ============================================
# Comma-separated list of IPs to skip rate limiting
RATE_LIMIT_SKIP_IPS=127.0.0.1

# Comma-separated list of blocked countries (ISO codes)
BLOCKED_COUNTRIES=

# Security alert emails (comma-separated)
SECURITY_ALERT_EMAILS=admin@your-domain.com

# ============================================
# MESSAGING (Viber & Telegram - Primary)
# ============================================
VIBER_AUTH_TOKEN=your-viber-auth-token
VIBER_WEBHOOK_URL=https://your-domain.com/api/v1/messaging/viber/webhook

TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/v1/messaging/telegram/webhook

MESSAGING_MOCK_MODE=false
MESSAGING_DEFAULT_LANGUAGE=my
MESSAGING_RATE_LIMIT=30

# ============================================
# MONITORING & ALERTING
# ============================================
SLACK_WEBHOOK_URL=
SECURITY_WEBHOOK_URL=

